<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/email_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:paddingLeft="10dp"
            android:hint="Email"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_shape"
            android:drawableStart="@drawable/fui_ic_mail_white_24dp"
            android:drawableLeft="@drawable/fui_ic_mail_white_24dp"/>

        <EditText
            android:id="@+id/username_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:paddingLeft="10dp"
            android:hint="Username"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="text"
            android:background="@drawable/edittext_shape"
            android:drawableStart="@drawable/ic_account_circle_white_24dp"
            android:drawableLeft="@drawable/ic_account_circle_white_24dp"/>

        <EditText
            android:id="@+id/password_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp"
            android:paddingLeft="10dp"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:background="@drawable/edittext_shape"
            android:drawableStart="@drawable/ic_lock_outline_white_24dp"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"/>

        <EditText
            android:id="@+id/password2_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp"
            android:paddingLeft="10dp"
            android:hint="Repeat password"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:background="@drawable/edittext_shape"
            android:drawableStart="@drawable/ic_lock_outline_white_24dp"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:background="@drawable/button_shape"
            android:layout_below="@+id/password2_input"
            android:text="@string/register"
            android:onClick="registerButtonClicked"/>


    </RelativeLayout>


</ScrollView>



