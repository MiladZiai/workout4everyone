<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageOfListViewCell"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="0"
        android:layout_margin="@dimen/fab_margin"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/titleOfListViewCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/levelOfListViewCell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginStart="@dimen/fab_homeButtonsMargin"
            android:layout_marginLeft="@dimen/fab_homeButtonsMargin"
            android:textColor="@color/darkBlueColor"/>
    </LinearLayout>
</LinearLayout>
