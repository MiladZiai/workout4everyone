<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profileFragment"
    android:background="@drawable/background_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/sign_in_activity_EmailInput"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edittext_shape"
            android:drawableStart="@drawable/ic_account_circle_white_24dp"
            android:drawableLeft="@drawable/ic_account_circle_white_24dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:textColorHint="@color/white"
            />

        <EditText
            android:id="@+id/sign_in_activity_passwordInput"
            android:layout_width="220sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/fab_margin"
            android:background="@drawable/edittext_shape"
            android:drawableStart="@drawable/ic_lock_outline_white_24dp"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:inputType="textPassword"
            android:hint="@string/Password"
            android:textColorHint="@color/white"
            />

        <Button
            android:id="@+id/sign_in_activity_signInButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:textColor="@color/red"
            android:text="@string/SignIn"
            />

        <ProgressBar
            android:id="@+id/sign_in_activity_signInProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/sign_in_activity_registerButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:background="@drawable/button_shape"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:text="@string/register"
            />

        <com.facebook.login.widget.LoginButton xmlns:fb="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sign_in_activity_facebookLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin" />

        <Button
            android:id="@+id/sign_in_activity_termsAndConditionButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:textColor="@color/red"
            android:text="@string/terms_and_conditions"/>
    </LinearLayout>
</ScrollView>